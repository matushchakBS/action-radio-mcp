{
  "name": "episode-manager-mcp",
  "version": "1.0.0",
  "description": "MCP server for Episode Manager API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:http": "node dist/server-http.js",
    "test": "npx tsx src/test/run-tests.ts",
    "test:health": "npx tsx src/test/health.test.ts",
    "test:episodes": "npx tsx src/test/episodes.test.ts", 
    "test:tracks": "npx tsx src/test/tracks.test.ts",
    "test:placements": "npx tsx src/test/placements.test.ts",
    "dev": "tsc --watch --preserveWatchOutput",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "typescript": "^5.5.4"
  }
}
